<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@color/black"
    tools:context=".components">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/t" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/aj" />

        <Button
            android:id="@+id/button2"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:text="ANDROID DEVELOPEMENT"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginHorizontal="190dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="WEB DVELOPEMENT" />

        <Button
            android:id="@+id/button4"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:textColor="@color/white"
            android:layout_marginVertical="170dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="iOS ANDROID DEVELOPMENT" />

        <Button
            android:id="@+id/button5"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="170dp"
            android:layout_marginHorizontal="190dp"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="MACHINE LEARNING" />

        <Button
            android:id="@+id/button6"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="350dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:layout_marginHorizontal="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="CHAT-GPT " />
    </RelativeLayout>
</RelativeLayout>